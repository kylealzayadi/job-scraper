{
  "manifest_version": 3,
  "name": "Job Info Scraper",
  "version": "1.0",
  "description": "Scrape job info from current page and send to Google Sheets.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["http://localhost:5000/*", "https://script.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Info Scraper",
    "default_icon": "icons8-dead-by-daylight-64.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*",
        "*://indeed.com/*",
        "*://*.linkedin.com/*",
        "*://linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
